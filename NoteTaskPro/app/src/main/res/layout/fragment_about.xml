<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task_bg">

    <TextView
        android:id="@+id/AboutUsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AboutUs"
        android:textSize="30dp"
        android:paddingTop="100dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/AboutUsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:layout_below="@+id/AboutUsTitle"
        android:padding="10dp"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/AboutUsTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="97dp"
        android:src="@drawable/smiley" />

    <TextView
        android:id="@+id/ContactInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact information:"
        android:layout_below="@+id/AboutUsTxt"
        android:layout_marginTop="200dp"
        android:textSize="17dp"
        android:paddingTop="20dp"
        android:background="@drawable/border_top_black"
        android:paddingLeft="5dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_below="@id/ContactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:support@notetaskpro.com"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:paddingLeft="5dp"/>
    <TextView
        android:id="@+id/phone"
        android:layout_below="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: (+961) 12 345 678"
        android:textSize="15dp"
        android:paddingLeft="5dp"/>


</RelativeLayout>